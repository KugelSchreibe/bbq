<div class="buffer-bottom">
  <div class="d-flex inline-flex align-items-center">
    <div>
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em>
          <strong>
            <%= comment.user_name %>
          </strong>
        </em>
      <% end %>

      <div>
        <em class="text-gray text-sm"><%= l comment.created_at, format: :short %></em>
      </div>
    </div>

    <div class="buffer-left buffer-right self-flex">
      <%= comment.body %>

      <div>
        <% if current_user_can_edit?(comment) %>
          <div class="buffer-top">
            <%= button_to t('app.delete'), event_comment_path(comment.event, comment), class: 'btn btn-danger text-sm',
                          method: :delete, data: {confirm: t('notifications.delete_my_comment')} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
