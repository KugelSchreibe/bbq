<div class="event buffer-top">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/img/event_thumb.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top buffer-bottom d-flex">
              <%= link_to 'Изменить', edit_event_path(@event),
                          class: 'btn btn-primary buffer-right-sm' %>
              <%= button_to 'Удалить', event_path(@event),
                            method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } },  class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
